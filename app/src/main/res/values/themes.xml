<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="github_icon" format="reference"/>
    <attr name="button_clear" format="reference"/>
    <attr name="search_icon" format="reference"/>
    <attr name="title_settings" format="reference"/>
    <attr name="text" format="reference"/>
    <!-- Base application theme. -->
    <style name="Theme.MyGithubUser2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_700</item>
        <item name="colorPrimaryVariant">@color/grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="github_icon">@drawable/githublogo</item>
        <item name="button_clear">@drawable/ic_baseline_clear_light</item>
        <item name="search_icon">@drawable/ic_baseline_search_open_24</item>
        <item name="title_settings">@color/purple_500</item>
        <item name="text">@color/black</item>
    </style>

    <style name="DetailContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="DetailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>